#!/bin/bash

# Options are: runecraft, llamacraft

DIRECTORY="/usr/local/mcwebmin/minecraft/"
cd $DIRECTORY

if [ ! -e "minecraft_server.jar" ]
then
    wget http://minecraft.net/download/minecraft_server.jar
else
    echo "It exists, moving on"
fi


#if [ "$1" = "hmod" ]; then
#
