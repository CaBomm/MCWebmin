#	unzip hmod.zip -d hmod/
#
#	# Adds hmod to minecraft_server.jar
#	/etc/init.d/minecraft stop
#	unzip hmod/bin/Minecraft_Mod.jar -d hmodjar/
#	cd hmodjar/
#	rm -r Main.class META-INF/
#	jar uvf ../minecraft_server.jar ./*
#	cd ..
