#fi

if [ "$1" = "runecraft" ]; then

	#Download runecraft
	if [ ! -e "runecraft_latest.zip" ]
	then
	    wget http://llama.cerberusstudios.net/runecraft_latest.zip
	else
	    echo "It exists, moving on"
	fi

	# Unzips runecraft to a directory
	unzip runecraft_latest.zip -d runecraft/

	#Stop server
	/etc/init.d/minecraft stop

	# Adds all of the files to the minecraft jar
	cd runecraft/
	jar uvf ../minecraft_server.jar ./*
	cd ..

	#Start server
	/etc/init.d/minecraft start

	# Cleans up
	rm -r runecraft/ runecraft_latest.zip

	echo "Finished"
fi

if [ "$1" = "llamacraft" ]; then

	#Download Llamacraft
	if [ ! -e "llamacraft_latest.zip" ]
	then
	    wget http://llama.cerberusstudios.net/llamacraft_latest.zip
	else
	    echo "It exists, moving on"
	fi

	# Unzips llamacraft to a directory
	unzip llamacraft_latest.zip -d llamacraft/

	#Stop server
	/etc/init.d/minecraft stop

	# Adds all of the files to the minecraft jar
	cd llamacraft/
	jar uvf ../minecraft_server.jar ./*
	cd ..

	#Start server
	/etc/init.d/minecraft start

	# Cleans up
	rm -r llamacraft/ llamacraft_latest.zip

	echo "Finished"
fi

